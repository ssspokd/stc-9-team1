<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Group-->
    <servlet>
        <servlet-name>GroupController</servlet-name>
        <servlet-class>ru.innopolis.stc9.t1.controller.GroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupController</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GroupEditController</servlet-name>
        <servlet-class>ru.innopolis.stc9.t1.controller.GroupEditController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupEditController</servlet-name>
        <url-pattern>/groups/edit</url-pattern>
    </servlet-mapping>

    <!--Login-->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ru.innopolis.stc9.t1.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--User-->
    <servlet>
        <servlet-name>UniversalDashboardController</servlet-name>
        <servlet-class>ru.innopolis.stc9.t1.controller.UniversalDashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UniversalDashboardController</servlet-name>
        <url-pattern>/user/dashboard</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>user-filter</filter-name>
        <filter-class>ru.innopolis.stc9.t1.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>user-filter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

</web-app>